      <field name="arch" type="xml">
        <xpath expr="//group[@string='Group By...']" position="inside">
          <filter string="Partner" domain="[]" context="{'group_by': 'partner_id'}" />
        </xpath>
      </field>
    </record>

  </data>
</openerp>

